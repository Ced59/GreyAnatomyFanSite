@{

    ViewData["Title"] = "Administration Site";

}

<section class="col-xs-offset-1 col-xs-10">

    <div class="row">

        <form asp-controller="Administration" asp-action="MajInfoSerieGrey">
            <button type="submit" class="btn btn-primary margBtn marginTop col-xs-12">Mettre à jour les infos de la série avec The Movie DB</button>
        </form>
    </div>

    <div class="row">

        <form asp-controller="Administration" asp-action="testAPI">
            <button type="submit" class="btn btn-primary margBtn marginTop col-xs-12">Test de l'API</button>
        </form>
    </div>

    @if (Model != null)
    {
        <div class="col-xs-12">
            <p>@Model.Original_name</p><br />
            <p>@Model.Overview</p><br />
            <p>@Model.Last_air_date</p><br />
            <p>@Model.Homepage</p><br />
            <p>Nombre de saisons: @Model.Number_of_seasons</p><br />
            <p>Nombre d'épisodes: @Model.Number_of_episodes</p>
        </div>
    }

    <div class="row">

        <form asp-controller="Administration" asp-action="MajSeasons">
            <button type="submit" class="btn btn-primary margBtn marginTop col-xs-12">Mettre à jour les saisons</button>
        </form>
    </div>

    <div class="row">

        <form asp-controller="Administration" asp-action="MajPrivatePractice">
            <button type="submit" class="btn btn-primary margBtn marginTop col-xs-12">Mettre à jour Private Practice</button>
        </form>
    </div>

    <div class="row">

        <form asp-controller="Administration" asp-action="MajStation">
            <button type="submit" class="btn btn-primary margBtn marginTop col-xs-12">Mettre à jour Station 19</button>
        </form>
    </div>
</section>