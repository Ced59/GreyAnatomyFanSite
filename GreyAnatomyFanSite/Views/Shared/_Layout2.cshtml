<!DOCTYPE html>
<html>

<head>

    <!-- Global site tag (gtag.js) - Google Analytics -->
    <script async src="https://www.googletagmanager.com/gtag/js?id=UA-135612138-1"></script>
    <script>
        window.dataLayer = window.dataLayer || [];
        function gtag() { dataLayer.push(arguments); }
        gtag('js', new Date());

        gtag('config', 'UA-135612138-1');
    </script>



    <link rel="apple-touch-icon" sizes="57x57" href="/apple-icon-57x57.png">
    <link rel="apple-touch-icon" sizes="60x60" href="/apple-icon-60x60.png">
    <link rel="apple-touch-icon" sizes="72x72" href="/apple-icon-72x72.png">
    <link rel="apple-touch-icon" sizes="76x76" href="/apple-icon-76x76.png">
    <link rel="apple-touch-icon" sizes="114x114" href="/apple-icon-114x114.png">
    <link rel="apple-touch-icon" sizes="120x120" href="/apple-icon-120x120.png">
    <link rel="apple-touch-icon" sizes="144x144" href="/apple-icon-144x144.png">
    <link rel="apple-touch-icon" sizes="152x152" href="/apple-icon-152x152.png">
    <link rel="apple-touch-icon" sizes="180x180" href="/apple-icon-180x180.png">
    <link rel="icon" type="image/png" sizes="192x192" href="/android-icon-192x192.png">
    <link rel="icon" type="image/png" sizes="32x32" href="/favicon-32x32.png">
    <link rel="icon" type="image/png" sizes="96x96" href="/favicon-96x96.png">
    <link rel="icon" type="image/png" sizes="16x16" href="/favicon-16x16.png">
    <link rel="manifest" href="/manifest.json">
    <meta name="msapplication-TileColor" content="#ffffff">
    <meta name="msapplication-TileImage" content="/ms-icon-144x144.png">
    <meta name="theme-color" content="#ffffff">

    <meta name="viewport" content="width=device-width" />


    <title>@ViewData["Title"]</title>


    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.css" />
    <link rel="stylesheet" href="~/lib/bootstrap/dist/js/bootstrap.min.js" />
    <link rel="stylesheet" href="~/lib/jquery/dist/jquery.min.js" />
    <link rel="stylesheet" href="~/css/site.css" />

</head>

<body>

    <div class="container">

        <div class="menuhaut">
            <div class="row">
                <nav class="navbar navbar-inverse navbar-fixed-top role=navigation">
                    <div class="container-fluid">
                        <div class="navbar-header">
                            <a asp-area="" asp-controller="Home" asp-action="Index" class="navbar-brand">Grey's Anatomy Fans</a>
                        </div>

                        <ul class="nav navbar-nav navbar-right">

                            @if (ViewBag.Logged == true)
                            {
                                <li><a asp-controller="Membres" asp-action="Show"> Bonjour @ViewBag.MessageBonjour</a></li>
                                <li><a asp-controller="Membres" asp-action="LogOut"><span class=" glyphicon-log-out"></span>Log out</a></li>
                            }
                            else
                            {
                                <li><a asp-area="" asp-controller="Membres" asp-action="Register"><span class="glyphicon glyphicon-user"></span> S'enregistrer</a></li>
                                <li><a asp-area="" asp-controller="Membres" asp-action="Login"><span class="glyphicon glyphicon-log-in"></span> Connexion</a></li>

                            }

                        </ul>


                    </div>
                </nav>
            </div>
        </div>


        <div class="row">
            <div class="img-responsive">
                <img class="logo" src="~/images/SiteImg/ImageBanniereTemporaire.jpg" />
            </div>
        </div>

        <div class="row">
            <div class="pub_entete">

            </div>
        </div>


        <nav class="navbar navbar-inverse role=navigation">
            <div class="container">

                <ul class="nav navbar-nav">
                    <li class="nav navbar-nav"><a asp-area="" asp-controller="Home" asp-action="Index" class="navbar-brand">Les Actus</a></li>
                    <li class="nav navbar-nav"><a asp-area="" asp-controller="Serie" asp-action="Index" class="navbar-brand">La Série</a></li>
                    <li class="nav navbar-nav"><a asp-area="" asp-controller="Personnages" asp-action="Home" class="navbar-brand">Les Personnages</a></li>
                    <li class="nav navbar-nav"><a asp-area="" asp-controller="Acteurs" asp-action="Home" class="navbar-brand">Les Acteurs</a></li>
                    <li class="nav navbar-nav"><a asp-area="" asp-controller="Relations" asp-action="Home" class="navbar-brand">Les Relations</a></li>
                    <li class="nav navbar-nav"><a asp-area="" asp-controller="Patients" asp-action="Home" class="navbar-brand">Les Patients</a></li>
                    <li class="nav navbar-nav"><a asp-area="" asp-controller="Photos" asp-action="Home" class="navbar-brand">Les Photos</a></li>

                </ul>

            </div>
        </nav>

        @if ((ViewBag.Statut == "Coeur") || (ViewBag.Statut == "Administrateur"))
        {
            <nav class="navbar navbar-inverse role=navigation">
                <div class="container">

                    <ul class="nav navbar-nav">
                        <li class="nav navbar-nav"><a asp-area="" asp-controller="Administration" asp-action="Membres" class="navbar-brand">Administration Membres</a></li>
                        <li class="nav navbar-nav"><a asp-area="" asp-controller="Administration" asp-action="Site" class="navbar-brand">Administration Site</a></li>
                        <li class="nav navbar-nav"><a asp-area="" asp-controller="Administration" asp-action="Persos" class="navbar-brand">Administration Persos</a></li>
                        <li class="nav navbar-nav"><a asp-area="" asp-controller="Home" asp-action="Articles" class="navbar-brand">Articles</a></li>


                    </ul>

                </div>
            </nav>
        }





        <div class=" row">
            @RenderBody()
        </div>

        <footer>
            <div>
                Nombre de visiteurs uniques = @ViewBag.NbreVisitUnique
            </div>
        </footer>
    </div>
</body>


</html>
