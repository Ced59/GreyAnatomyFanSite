
@{
    ViewData["Title"] = @ViewBag.Pseudo;
}







@if ((ViewBag.ChangeAvatarOk != null))
{
    <div class="row">
        <div class="col-lg-12 alert alert-success">


            <div class="row">
                <div class="col-lg-12">
                    @ViewBag.ChangeAvatarOk
                </div>
            </div>


        </div>
    </div>
}

<div class="row">
    <div class="col-xs-offset-4 col-xs-4">
        <div class="row">

            <img class="AvatarDescription img-circle img-thumbnail" src="~/@ViewBag.Avatar" />

        </div>
    </div>
</div>

<div class="row">
    <div class="col-xs-offset-5 col-xs-2">
        <div class="LiensModif">
            <a asp-area="" asp-controller="Membres" asp-action="ModifAvatar">Modifier votre image de profil</a>
        </div>
    </div>
    <div class="col-xs-offset-5 col-xs-2">
        <div class="LiensModif">
            <a asp-area="" asp-controller="Membres" asp-action="ModifPassword">Modifier votre mot de passe</a>
        </div>
    </div>

    
</div>


<div class="row">
    <div class="col-xs-offset-2 col-xs-8">

        <div class="col-xs-4">
            <h4>Pseudo:</h4>
        </div>
        <div class="col-md-4">
            @ViewBag.Pseudo
        </div>
    </div>
</div>


<div class="row">
    <div class="col-xs-offset-2 col-xs-8">

        <div class="col-xs-4">
            <h4>Adresse Mail:</h4>
        </div>
        <div class="col-md-4">
            @ViewBag.Mail
        </div>
        <div class="col-md-4">
            <a asp-area="" asp-controller="Membres" asp-action="ModifMail">Modifier votre adresse Mail</a>
        </div>
    </div>
</div>












