@using System.Globalization;

@{
    ViewData["Title"] = @Model.Pseudo;
}







@if ((ViewBag.ChangeAvatarOk != null))
{
    <div class="row">
        <div class="col-lg-12 alert alert-success">


            <div class="row">
                <div class="col-lg-12">
                    @ViewBag.ChangeAvatarOk
                </div>
            </div>


        </div>
    </div>
}

<div class="row">
    <div class="col-md-offset-5 col-md-2 col-xs-offset-1 col-xs-10">
        <div class="row">

            <img class="AvatarDescription img-circle img-thumbnail" src="~/@Model.Avatar" />

        </div>
    </div>
</div>


@if ((ViewBag.Pseudo != null) && (ViewBag.Pseudo == Model.Pseudo))
{
    <div class="row">
        <div class="col-xs-offset-4 col-xs-4">
            <div class="LiensModif">
                <a asp-area="" asp-controller="Membres" asp-action="ModifAvatar">Modifier votre image de profil</a>
            </div>
        </div>
        <div class="col-xs-offset-4 col-xs-4">
            <div class="LiensModif">
                <a asp-area="" asp-controller="Membres" asp-action="ModifPassword">Modifier votre mot de passe</a>
            </div>
        </div>
    </div>
}

<section class="row">
    <section class="col-lg-offset-1 col-lg-10">



        <table class="table table-bordered table-striped">
            <caption>
                <h4>Informations</h4>
            </caption>

            <tr>

                <th class="col-xs-4">Pseudo:</th>
                <td class="col-xs-4">@Model.Pseudo</td>

            </tr>

            <tr>

                <th class="col-xs-4">Statut:</th>
                <td class="col-xs-4">@Model.Statut</td>

            </tr>

            <tr>

                <th class="col-xs-4">Date d'inscription:</th>
                <td class="col-xs-4">@Model.DateInscription.ToString("F", CultureInfo.CreateSpecificCulture("fr-FR"))</td>

            </tr>

            @if (((ViewBag.Pseudo != null) && (ViewBag.Pseudo == Model.Pseudo)) || (ViewBag.Statut == "Administrateur") || (ViewBag.Statut == "Coeur"))
            {
            <tr>

                <th class="col-xs-4">Adresse Mail:</th>
                <td class="col-xs-4">@Model.Mail </td>
                @if (ViewBag.Pseudo == Model.Pseudo)
                    {
                <td class="col-xs-2">
                    <a asp-area="" asp-controller="Membres" asp-action="ModifMail">Modifier</a>
                </td>
                    }

            </tr>
            }



        </table>
    </section>
</section>














