@{
    ViewData["Title"] = "Modifier image de profil";
}


<div class="row">
    <div class=" col-lg-3">

    </div>
    <div class="col-lg-6">

        @if ((ViewBag.errors != null))
        {


            <div class="row">
                <div class="col-lg-12 alert alert-danger">
                    <div class="Errors">

                        <div class="row">
                            <div class="col-lg-12">
                                @ViewBag.errors
                            </div>
                        </div>

                    </div>
                </div>
            </div>

        }




        <div class="col-lg-12">
            <div class="Inscription">
                <div class="row">
                    <h2 class="col-lg-12">Modifier votre photo de profil</h2>
                </div>

                <div class="row">
                    <div class="img-thumbnail">

                        <img class="AvatarDescription" src="~/@ViewBag.Avatar" />
                    </div>
                </div>

                <form asp-controller="Membres" asp-action="ModifAvatarPost" method="post" enctype="multipart/form-data">
                    <div class="row">
                        <div class="row">
                            <input type="file" name="image" class="form-control" />
                        </div>
                        <div class="row">

                            <button class="form-control btn btn-default" type="submit">Enregistrer</button>

                        </div>

                    </div>
                </form>
            </div>
        </div>

    </div>
</div>
