@{
    ViewData["Title"] = "Modifier votre profil";
}

<div class=" row">

    <div class="col-lg-6">
        <div class="Login">
            <form asp-controller="Membres" asp-action="UpdateMembre">
                <div class=" row">
                    <div class="col-lg-12">
                        <div>
                            <h2>Bonjour @ViewBag.Pseudo</h2>
                        </div>
                    </div>
                </div>

                <div class=" row">
                    <div class="col-lg-12">
                        <div class="img-thumbnail">
                            <img class="AvatarDescription" src="~/@ViewBag.Avatar" asp-append-version="true" />
                        </div>
                    </div>
                </div>
                <div class="row">
                    <input type="file" name="images" placeholder="Changer l'image de profil" class="form-control" />
                </div>
                <div class="row">
                    <h2 class="col-lg-12">Modifier vos infos</h2>
                </div>

                <div class="row">
                    <div class="col-lg-6 ">
                        <h3>Modifier votre adresse mail:</h3>
                    </div>
                    <div class="col-lg-6">
                        <input type="text" class="form-control" name="mail" value=@ViewBag.Mail placeholder="Votre Adresse Mail" />
                    </div>
                </div>

                <div class="row">
                    <div class="col-lg-6 ">
                        <h3>Modifier votre mot de passe:</h3>
                    </div>
                    <div class="col-lg-6">
                        <input type="password" class="form-control" name="password" placeholder="Votre Mot de Passe" />
                    </div>
                </div>

                <div class="row">
                    <div class="col-lg-6 ">
                        <h3>Modifier votre mot de passe:</h3>
                    </div>
                    <div class="col-lg-6">
                        <input type="password" class="form-control" name="password" placeholder="Votre Mot de Passe" />
                    </div>
                </div>

                <div class="row">
                    <div class="col-lg-6 ">
                        <h3>Confirmer votre mot de passe:</h3>
                    </div>
                    <div class="col-lg-6">
                        <input type="password" class="form-control" name="cPassword" placeholder="Confirmation" />
                    </div>
                </div>

                <div class="row">
                    <div class="col-lg-12">
                        <button class="form-control btn btn-default" type="submit">Valider</button>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>