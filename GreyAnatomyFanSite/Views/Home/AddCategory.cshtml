@{
    ViewData["Title"] = "Ajouter Catégorie";
}

<div class="row">
    <div class="col-lg-6">

        @if ((ViewBag.errors != null))
        {

            <div class="row">
                <div class="col-lg-12 alert alert-danger">
                    <div class="Errors">

                        <div class="row">
                            <div class="col-lg-12">
                                @ViewBag.errors
                            </div>
                        </div>
                    </div>
                </div>
            </div>

        }
    </div>
</div>

<div class="row">
    <div class="col-lg-offset-3 col-lg-6">
        <div class="row">
            <h2 class="col-lg-12">Ajouter Catégorie</h2>
        </div>
        <form asp-controller="Home" asp-action="AddCategoryPost" method="post">
            <div class="row">
                <div class="col-lg-12">
                    <label for="nom">Nom : </label>
                    <input type="text" class="form-control" name="nom" placeholder="Nom" />
                </div>
            </div>
            <div class="row">
                <div class="col-lg-12">
                    <button class="form-control btn btn-default" type="submit">Enregistrer</button>
                </div>
            </div>
        </form>
    </div>
</div>